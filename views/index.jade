	div.names
		p connected:
		//image#user-icon(src="/images/icons/cc/black/png/user_icon&16.png")
		input#yourname-input
		span.you-text (you)
		ul#names-ul

	div.export
		h3 Export board
		div
			button#export-txt Text format
			button#export-csv CSV format
			button#export-json JSON format (for import in Scrumblr)

	div.import
		h3 Import board
		div
			label(for="import-input") JSON file to import
			input(type="file")#import-input
			button#import-file Import

	div.revisions
		h3 Revisions
		div
			button#create-revision Create a revision
			div
				ul#revisions-list

